<?xml version="1.0" encoding="UTF-8"?>
<component name="org.athento.nuxeo.relations-search-configuration.formlayout-cv" version="1.0.0">
  <require>org.nuxeo.runtime.started</require>
<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">
    <layout name="layout@AthentoSetup-create">
      <templates>
        <template mode="any">/layouts/athento_setup_layout_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>title</widget>
        </row>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>Light_Search</widget>
        </row>
      </rows>
      <widget name="title" type="text">
        <labels>
          <label mode="any">Title</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>dc:title</field>
        </fields>
      </widget>
      <widget name="Light_Search" type="checkbox">
        <labels>
          <label mode="any">Light Search</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>athentosetup:Light_Search</field>
        </fields>
      </widget>
    </layout>
    <layout name="layout@AthentoSetup-edit">
      <templates>
        <template mode="any">/layouts/athento_setup_layout_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>Light_Search</widget>
        </row>
      </rows>
      <widget name="Light_Search" type="checkbox">
        <labels>
          <label mode="any">Light Search</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>athentosetup:Light_Search</field>
        </fields>
      </widget>
    </layout>
    <layout name="layout@AthentoSetup-view">
      <templates>
        <template mode="any">/layouts/athento_setup_layout_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>title</widget>
        </row>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>Light_Search</widget>
        </row>
      </rows>
      <widget name="title" type="text">
        <labels>
          <label mode="any">Title</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>dc:title</field>
        </fields>
      </widget>
      <widget name="Light_Search" type="checkbox">
        <labels>
          <label mode="any">Light Search</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>athentosetup:Light_Search</field>
        </fields>
      </widget>
    </layout>
    

   <layout name="document_edit_form_options">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      
    </layout>

    
    
   
  </extension>
  
  </component>
  